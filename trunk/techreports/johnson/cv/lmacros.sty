\def\itemizenoindent       %% LaTeX \itemize with two lines added (as marked)
  {\ifnum \@itemdepth >3
      \@toodeep
   \else
      \advance\@itemdepth \@ne
      \edef\@itemitem{labelitem\romannumeral\the\@itemdepth}%
      \list{\csname\@itemitem\endcsname}
           {\settowidth{\labelwidth}{\@nameuse\@itemitem}         %% added
            \leftmargin=\labelwidth\advance\leftmargin\labelsep   %% added
            \def\makelabel##1{\hss\llap{##1}}}
   \fi}
\let\enditemizenoindent =\endlist


