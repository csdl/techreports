%% file name: cscw.sty
%%
%%	The latex style file for use in the generation of CSCW'94
%%  camera-ready copies.
%%					S. Augustine Su, 5/18/94
%%			
%%  The following adjustments are needed to your document:
%%  1.  You must have the option `times' and `cscw' in the \documentstyle line.
%%	e.g, \documentstyle[times,cscw,epsf]{article}
%%  2.  You must NOT use 11pt or 12pt style.
%%  3.  You must change the font for author by the following:
%%	\author{{\authorfont  auther_name} \\ ......
%%  4.  You may use \copyrightspace to leave blank for us to put in the 
%%	copyright notice.  \copyright has to be put immediately after
%%	the abstract.
%%  5.	You may use \keywords to precede your keywords.
%%  6.  If you want figures accross 2 columns, use figure* rather than
%%      figure and use \captiontwocolumns rather than \caption.
%%  7.  You may use \pagebreak to make the two columns of the last page
%%  	equal length.
%%
%%  This latex style file is revised from Simon Kaplan's "COCS 93 Style
%%  Template and Guidelines", and advised by Dr. Richard Furuta.

\typeout{Document Style 'cscw'.}
\pagestyle{empty}
\font\titlefont=rphvb at 18pt
\font\authorfont=rptmri at 12pt
\font\authoraddressfont=rptmr at 12pt
\font\sectionfont=rphvb at 9pt
\font\keywordsfont=rphvr at 10pt
\font\subsubsectionfont=rphvro at 9pt
\font\captionfont=rphvr at 9pt
\font\helveticafont=rphvr at 10pt

\topmargin	-.85in
\oddsidemargin	-.25in
\evensidemargin	-.25in
\headheight 12pt \headsep 25pt \footheight 12pt \footskip 75pt 
%\textheight 9.25in \textwidth 7in \columnsep 0.8cm \columnseprule 0pt 
\textheight 23.6cm \textwidth 7in \columnsep 0.8cm \columnseprule 0pt 
%\def\@oddhead{}\def\@evenhead{}
%\def\@oddfoot{}
%\def\@evenfoot{\@oddfoot}
\parskip 11pt
\parindent 0em
\leftmargini 2em
\leftmargin\leftmargini 
\leftmarginv .5em
\leftmarginvi .5em

\hyphenpenalty=5000
\exhyphenpenalty=5000

\def\captiontwocolumns{\refstepcounter\@captype \@dblarg{\@captionfortwo\@captype}}

\long\def\@caption#1[#2]#3{\par\addcontentsline{\csname
  ext@#1\endcsname}{#1}{\protect\numberline{\csname 
  the#1\endcsname}{\ignorespaces #2}}\begingroup
    \@parboxrestore
    %\normalsize
    \captionfont
    \hspace*{0.5cm} \parbox{7.5cm}{
     \@makecaption{\csname fnum@#1\endcsname}{{\ignorespaces #3}}\par
     }
  \endgroup}

\long\def\@captionfortwo#1[#2]#3{\par\addcontentsline{\csname
  ext@#1\endcsname}{#1}{\protect\numberline{\csname
  the#1\endcsname}{\ignorespaces #2}}\begingroup
    \@parboxrestore
    %\normalsize
    \captionfont
    \hspace*{0.5cm} \parbox{16.8cm}{
     \@makecaption{\csname fnum@#1\endcsname}{{\ignorespaces #3}}\par
     }
  \endgroup}

\renewcommand{\section}[1]{\par {\sectionfont #1} \\}
\renewcommand{\subsection}[1]{{\sectionfont #1} \\}
\renewcommand{\subsubsection}[1]{{\subsubsectionfont #1 }}
\def\abstract{{\sectionfont ABSTRACT}\\}
\def\endabstract{\par}
%\newcommand{\keywords}{\par {\sectionfont KEYWORDS: }}
\newcommand{\keywords}{\par {\keywordsfont KEYWORDS: }}
%\newcommand{\keywords}{\par KEYWORDS: }
\newcommand{\copyrightspace}{\begin{figure}[b] \vspace*{2.5cm} \end{figure}}

\parsep 0em
\topsep 0em
